{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./client",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "outDir": "static"
  },
  "exclude": [
    "src",
    ".vscode",
    "target",
    "static"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "reportFiles": ["src/**/*.{ts,tsx}"]
  }
}
